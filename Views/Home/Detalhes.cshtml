@model xml_reader.Models.NotaFiscal
@{
    ViewData["Title"] = "Detalhes da Nota Fiscal";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Detalhes da Nota Fiscal</h1>
                <div>
                    <a asp-action="Listar" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar à Lista
                    </a>
                    <a asp-action="Buscar" class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i> Nova Busca
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-file-invoice"></i>
                        Nota Fiscal Nº @Model.Numero
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary">Informações Principais</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Número da Nota:</strong></td>
                                    <td>@Model.Numero</td>
                                </tr>
                                <tr>
                                    <td><strong>Data de Emissão:</strong></td>
                                    <td>@Model.DataEmissao</td>
                                </tr>
                                <tr>
                                    <td><strong>Valor Total:</strong></td>
                                    <td>
                                        <span class="h5 text-success">
                                            @Model.ServicoValor
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Arquivo de Origem:</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.NomeArquivo))
                                        {
                                            <span class="badge bg-info">@Model.NomeArquivo</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Não informado</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Processado em:</strong></td>
                                    <td>
                                        <small class="text-muted">
                                            @Model.DataEmissao
                                        </small>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary">Prestador de Serviço</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>CNPJ:</strong></td>
                                    <td>
                                        <span class="font-monospace">
                                            @($"{Model.PrestadorCNPJ.Substring(0, 2)}.{Model.PrestadorCNPJ.Substring(2, 3)}.{Model.PrestadorCNPJ.Substring(5, 3)}/{Model.PrestadorCNPJ.Substring(8, 4)}-{Model.PrestadorCNPJ.Substring(12, 2)}")
                                        </span>
                                    </td>
                                </tr>
                            </table>

                            <h5 class="text-primary mt-4">Tomador de Serviço</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>CNPJ:</strong></td>
                                    <td>
                                        <span class="font-monospace">
                                            @($"{Model.TomadorCNPJ.Substring(0, 2)}.{Model.TomadorCNPJ.Substring(2, 3)}.{Model.TomadorCNPJ.Substring(5, 3)}/{Model.TomadorCNPJ.Substring(8, 4)}-{Model.TomadorCNPJ.Substring(12, 2)}")
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h5 class="text-primary">Descrição do Serviço</h5>
                            <div class="border rounded p-3 bg-light">
                                <p class="mb-0">@Model.ServicoDescricao</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Informações Técnicas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <small class="text-muted">ID no Sistema:</small><br>
                            <strong>@Model.IdNotaFiscal</strong>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Status:</small><br>
                            <span class="badge bg-success">Processada</span>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Data/Hora de Processamento:</small><br>
                            <strong>@Model.DataEmissao</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>