@model xml_reader.ViewModels.UploadXmlViewModel
@{
    ViewData["Title"] = "Leitor de XML - Notas Fiscais";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Sistema de Leitura de XML - Notas Fiscais de Serviço</h1>
            
            <div class="card">
                <div class="card-header">
                    <h3>Upload de Arquivos XML</h3>
                </div>
                <div class="card-body">
                    @if (Model.PossuiErros)
                    {
                        <div class="alert alert-danger">
                            <h4>Erros encontrados:</h4>
                            <ul>
                                @foreach (var error in Model.MensagensErro)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (Model.ProcessamentoResultado.Any())
                    {
                        <div class="alert alert-success">
                            <h4>Processamento concluído:</h4>
                            <ul>
                                @foreach (var result in Model.ProcessamentoResultado)
                                {
                                    <li>@result</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Index" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="ArquivosXml" class="form-label"></label>
                            <input asp-for="ArquivosXml" type="file" class="form-control" multiple accept=".xml" />
                            <span asp-validation-for="ArquivosXml" class="text-danger"></span>
                            <div class="form-text">
                                Selecione um ou mais arquivos XML de notas fiscais de serviço (NFS-e).
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Processar Arquivos XML
                        </button>
                    </form>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Listar Notas Fiscais</h5>
                            <p class="card-text">Visualize todas as notas fiscais processadas</p>
                            <a asp-action="Listar" class="btn btn-outline-primary">
                                <i class="fas fa-list"></i> Ver Lista
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Buscar Notas Fiscais</h5>
                            <p class="card-text">Pesquise notas fiscais por critérios específicos</p>
                            <a asp-action="Buscar" class="btn btn-outline-secondary">
                                <i class="fas fa-search"></i> Buscar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
