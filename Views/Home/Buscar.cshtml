@model xml_reader.ViewModels.SearchViewModel
@{
    ViewData["Title"] = "Buscar Notas Fiscais";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Buscar Notas Fiscais</h1>
                <div>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-upload"></i> Novo Upload
                    </a>
                    <a asp-action="Listar" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> Ver Todas
                    </a>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h3>Critérios de Busca</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Buscar" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NumeroNota" class="form-label"></label>
                                    <input asp-for="NumeroNota" class="form-control" placeholder="Digite o número da nota..." />
                                    <span asp-validation-for="NumeroNota" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CnpjPrestador" class="form-label"></label>
                                    <input asp-for="CnpjPrestador" class="form-control" placeholder="Digite o CNPJ do prestador..." />
                                    <span asp-validation-for="CnpjPrestador" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CnpjTomador" class="form-label"></label>
                                    <input asp-for="CnpjTomador" class="form-control" placeholder="Digite o CNPJ do tomador..." />
                                    <span asp-validation-for="CnpjTomador" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="DataInicio" class="form-label"></label>
                                    <input asp-for="DataInicio" class="form-control" type="date" />
                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="DataFim" class="form-label"></label>
                                    <input asp-for="DataFim" class="form-control" type="date" />
                                    <span asp-validation-for="DataFim" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                            <a asp-action="Buscar" class="btn btn-outline-secondary">
                                <i class="fas fa-refresh"></i> Limpar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            @if (ViewBag.ModelState?.IsValid == false)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            @if (Model.Results.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h3>Resultados da Busca</h3>
                        <small class="text-muted">@Model.Results.Count resultado(s) encontrado(s)</small>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Número</th>
                                        <th>CNPJ Prestador</th>
                                        <th>CNPJ Tomador</th>
                                        <th>Data Emissão</th>
                                        <th>Valor Total</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var nota in Model.Results)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@nota.Numero</strong>
                                            </td>
                                            <td>
                                                <span class="font-monospace">@nota.PrestadorCNPJ</span>
                                            </td>
                                            <td>
                                                <span class="font-monospace">@nota.PrestadorCNPJ</span>
                                            </td>
                                            <td>
                                                @nota.DataEmissao
                                            </td>
                                            <td>
                                                <span class="text-success fw-bold">
                                                    @nota.ServicoValor
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-action="Detalhes" asp-route-id="@nota.IdNotaFiscal" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Ver Detalhes
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model.Results.Any())
                        {
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <div class="alert alert-info">
                                        <strong>Resumo dos Resultados:</strong><br />
                                        Total de notas: @Model.Results.Count<br />
                                        Valor total: @Model.Results.Sum(n => decimal.Parse(n.ServicoValor))
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (ViewContext.HttpContext.Request.Method == "POST")
            {
                <div class="alert alert-warning">
                    <h4>Nenhum resultado encontrado</h4>
                    <p>Não foram encontradas notas fiscais que correspondam aos critérios de busca informados.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}